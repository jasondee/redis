<html>
<head>
<title>Scorpion Force!</title>

<link rel="stylesheet" href="https://bootswatch.com/4/united/bootstrap.min.css">
<style>
.del:checked + span{
    color:red;
}

.well {
    margin-left: 10px;
}
    
.scorpion-list {
    list-style:none;
}

#head {
    color: red;
}

#sub {
    color: black;
    background-color:red;
    margin: 5px;
}

.add {
    float:right;
}
</style>
</head>

<body>
    
<div class="container">

<h1 id="head"><strong><center>Scorpion Force</strong></center></h1>
<h2><em><center>It's like Salesforce, but for scorpions.</center></em></h2>
<h3>Scorpions in stock:</h3>

<form method="POST" action="/scorpion/delete">
    <ul class="scorpion-list">
        <% scorpions.forEach(function(scorpion) { %>
            <li>
                <label>
                    <input type="checkbox" name="scorpions" class="del" value="<%= scorpion %>"><span><%= scorpion %></span>
                </label>
            </li>    
        <% }) %>
    </ul>
    <input id="sub" type="submit" value="Remove">
</form>

<form class="add" method="POST" action="/scorpion/add">
    <label>Add Scorpion:</label> <br>
    <input type="text" name="scorpion" placeholder="Scorpion Name"><br>
    <input type="submit" value="Submit" id="sub"><br>
</form>
<hr>
<div class="well">
<h3>Next Sales Call</h3>

Name: <%= call.name %><br>

Company: <%= call.company %><br>

Phone: <%= call.phone %><br>

Time: <%= call.time %>
</div>
<br>
<div class="well">
    
<h3>Edit Next Call</h3>

<form method="post" action="/call/add">

    <label>Contact Name</label><br>

    <input type="text" name="name" placeholder="Name">

    <br><br>

    <label>Company</label><br>

    <input type="text" name="company" placeholder="Company">

    <br><br>

    <label>Phone</label><br>

    <input type="text" name="phone" placeholder="Phone">

    <br><br>

    <label>Day & Time</label><br>

    <input type="text" name="time" placeholder="Time">

    <br><br>

    <input id="sub" type="submit" value="Submit">

</form>

</div>
    
</div>
    
</body>
</html>